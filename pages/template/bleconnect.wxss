  .bleconnect {
      width: 100%;
     height: 100%;  
     position: absolute; 
  }

  .center {
    margin: auto;
    top: 0;bottom: 0;
    left:0;right: 0;
    position: absolute;
    width: 200px;
    height: 200px;
    border-radius: 10px;
    background-color: white;
  }

  .center > image {

    display: block;
    position: absolute;
    left: 0;right: 0;margin: auto;
    width: 80px;
    height: 80px;
    top: 20%;
  }

  .tip {

    width: 100%;
    text-align: center;
    color: #808080;
    font-size: 1rem;
    position: absolute;
    bottom: 20%;
  }